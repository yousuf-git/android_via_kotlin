<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OTPAuth" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Custom text appearances -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.OTPAuth.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.OTPAuth.Headline2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.OTPAuth.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.OTPAuth.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.OTPAuth.Button</item>
    </style>

    <style name="Theme.OTPAuth.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Text Appearances -->
    <style name="TextAppearance.OTPAuth.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="TextAppearance.OTPAuth.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextAppearance.OTPAuth.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.OTPAuth.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="TextAppearance.OTPAuth.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
</resources>